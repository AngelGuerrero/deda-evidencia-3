<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
            <items>
              <MenuItem mnemonicParsing="false" text="Cerrar" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
              <MenuItem mnemonicParsing="false" text="Acerca de este programa" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="randomBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Insertar aleatoriamente" VBox.vgrow="ALWAYS" />
            <Button fx:id="deleteBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Eliminar nodo menor" VBox.vgrow="ALWAYS" />
            <Button fx:id="showPreorderBtn" mnemonicParsing="false" prefWidth="200.0" text="Mostrar en PreOrden" />
            <Button fx:id="showInorderBtn" mnemonicParsing="false" prefWidth="200.0" text="Mostrar en InOrden" />
            <Button fx:id="showPostorderBtn" mnemonicParsing="false" prefWidth="200.0" text="Mostar en PosOrden" />
            <Button fx:id="exitBtn" mnemonicParsing="false" prefWidth="200.0" style="-fx-background-color: red;" text="Salir" textFill="WHITE" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
